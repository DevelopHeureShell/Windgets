        <Label Content="@Sumokai_ (Twitter)" HorizontalAlignment="Left" Margin="67,95,0,0" VerticalAlignment="Top" Foreground="#DDFFFFFF" FontFamily="Segoe UI Light" FontSize="11"/>
        <Label Content="Version publié le" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Foreground="#DDFFFFFF" Grid.RowSpan="2"/>
        <Label Content="7.10.20" HorizontalAlignment="Left" Margin="113,124,0,0" VerticalAlignment="Top" Foreground="#DDFFFFFF" FontFamily="Segoe UI Light" FontSize="11" Grid.RowSpan="2"/>



    </Grid>
</Window>
